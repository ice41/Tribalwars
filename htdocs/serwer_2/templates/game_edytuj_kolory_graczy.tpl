<h2>Edycja kolorów graczy na mapie</h2>{if !empty($error)}	<font class="error"/>{$error}</font><br><br>{/if}<form action="game.php?village={$village.id}&screen=edytuj_kolory_graczy&akcja=dodaj_gracza&h={$hkey}" method="post">	Gracz: <input type="text" value="{$value}" name="gracz"/>			&nbsp;&nbsp;&nbsp;	<select id="kolor" name="kolor">		<option style="background: rgb(55,66,77);" value="177,78,122">Wybierz kolor</option>			{php}			$e = '';		    for ($a = 0;$a <=10; $a ++)		        {			    for ($b = 0;$b <=10; $b ++)		            {				    for ($c = 0;$c <=10; $c ++)		                {			         	$d = $a*25;			    	    $e = $b*25;					    $f = $c*25;			    	    $q .= '<option style="background: rgb('.$d.','.$e.','.$f.');" value="'.$d.','.$e.','.$f.'">'.$d.','.$e.','.$f.'</option>';					    }			        }			    }			echo $q;				{/php}        </select>	&nbsp;&nbsp;&nbsp;	<input name="submit" value="Dodaj gracza" type="submit"></form><br><br>{if count($odznaczeni) > 0}	<table class="vis" width=380>		<tr>		    <th>Zaznaczony gracz</th>			<th>Kolor</th>			<th>Akcja</th>		</tr>		{foreach from=$odznaczeni item=odznaczenie}		    <tr>		        <td>					<a href="game.php?village={$village.id}&screen=info_player&id={$odznaczenie.do_gracz_id}"/>{$odznaczenie.do_gracz_name}</a>				</td>				<td>					<div style="height:15px;width:100px;margin-top:1px;margin-left:6px; background: rgb({$odznaczenie.kolor});"/>				</td>				<td>					<a href="game.php?village={$village.id}&screen=edytuj_kolory_graczy&akcja=usun_gracza&id={$odznaczenie.id}">&raquo;						 Usuñ odznaczenie					</a>				</td>		    </tr>		{/foreach}	</table>{/if}